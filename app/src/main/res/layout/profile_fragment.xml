<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/searchProductEt"

        android:background="@drawable/shape_rect02"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:drawableStart="@drawable/ic_baseline_search_24"
        android:drawablePadding="10dp"
        android:hint="Search"
       />

<RelativeLayout
    android:layout_width="match_parent"
    android:background="@drawable/shape_rect02"
    android:layout_below="@+id/searchProductEt"
    android:layout_marginStart="8dp"
    android:id="@+id/relavtive2"
    android:layout_marginEnd="8dp"
    android:layout_height="wrap_content">


    <com.blogspot.atifsoftwares.circularimageview.CircularImageView

        android:id="@+id/iconIv"
        android:layout_width="120dp"

        android:layout_height="120dp"

        android:padding="5dp"
        android:src="@drawable/personicon"
        android:layout_marginStart="10dp"
        app:c_background_color="#000"
        app:c_border="true"

        app:c_border_width="2dp">

    </com.blogspot.atifsoftwares.circularimageview.CircularImageView>

    <TextView
        android:layout_width="match_parent"
        android:text="User Name"
        android:id="@+id/UserName"
        android:layout_marginTop="20dp"
        android:layout_marginStart="4dp"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_toEndOf="@+id/iconIv"
        android:layout_height="wrap_content">

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:text="ABC@gmail.com"
        android:id="@+id/UserEmail"
        android:layout_marginStart="4dp"
        android:layout_below="@+id/UserName"
       android:layout_marginTop="2dp"


        android:layout_toEndOf="@+id/iconIv"
        android:layout_height="wrap_content">

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:text="03174945474"
        android:id="@+id/UserPhone"
        android:layout_marginStart="4dp"
        android:layout_below="@+id/UserEmail"
        android:layout_marginTop="2dp"

android:autoLink="phone"
        android:layout_toEndOf="@+id/iconIv"
        android:layout_height="wrap_content">

    </TextView>
</RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:id="@+id/mypostreceyclerView"
        android:layout_below="@+id/relavtive2"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>

</ScrollView>
</RelativeLayout>